<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.mojo.com.RegisterActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="#000"
        android:weightSum="1">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp"
            android:id="@+id/iv_backToLogin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="ACCOUNT ERSTELLEN "
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_centerVertical="true"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"

            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginLeft="@dimen/abstand_login_form"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/abstand_login_form"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="@dimen/abstand_login_form"
            android:layout_height="315dp">

            <TextView
                android:text="USERNAME "
                android:textColor="#cab2b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="10sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/et_username"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_above="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="PASSWORT "
                android:textColor="#cab2b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="10sp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/et_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters|textCapWords|textPassword"
                android:ems="10"
                android:id="@+id/et_password"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="E-MAIL-ADRESSE "
                android:textColor="#cab2b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="10sp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/et_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textEmailAddress"
                android:ems="10"
                android:id="@+id/et_mail"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_above="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TELEFONNUMMER "
                android:textColor="#cab2b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="10sp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/et_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|phone"
                android:ems="10"
                android:id="@+id/et_telefonnummer"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_above="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="NAME "
                android:textColor="#cab2b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="10sp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/et_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords|textPersonName"
                android:ems="10"
                android:id="@+id/et_name"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_above="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingRight="@dimen/abstand_login_form"
            android:paddingLeft="@dimen/abstand_login_form"
            android:gravity="center"
            android:background="#ffbdb8"
            android:id="@+id/ll_register">

            <TextView
                android:text="BEGINNEN  "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_register"
                android:textColor="#000"
                android:layout_weight="1.00"
                android:textAlignment="viewStart"
                android:gravity="center"
                android:textSize="13sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_trending_flat_black_24dp"
                android:id="@+id/imageView"
                android:layout_weight="0.72" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

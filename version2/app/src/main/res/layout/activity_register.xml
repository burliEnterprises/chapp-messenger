<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/delf"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.mojo.com.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/abstand_login_form"
        android:layout_marginRight="@dimen/abstand_login_form"
        android:background="@drawable/borderlogin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="77.03"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="@dimen/abstand_login_form"
            android:paddingRight="@dimen/abstand_login_form"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WIE LAUTET DEIN NAME?"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="normal|bold|italic" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingBottom="16dp"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="WÄHLE EINEN USERNAME:"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingBottom="16dp"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="DEINE E-MAIL-ADRESSE?"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingBottom="16dp"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="DEINE TELEFONNUMMER?"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/et_telefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone"
                android:paddingBottom="16dp"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="WÄHLE EIN PASSWORT:"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingBottom="16dp"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_register"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:paddingLeft="@dimen/abstand_login_form"
            android:paddingRight="@dimen/abstand_login_form">

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:gravity="center"
                android:text="STARTEN"
                android:textAlignment="viewStart"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                app:srcCompat="@drawable/ic_trending_flat_black_24dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1.00"
            android:gravity="center"
            android:text="Benutzer eingefallen?  "
            android:textAlignment="viewEnd"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_backtologin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="center"
            android:text="Zum Login."
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

</LinearLayout>
